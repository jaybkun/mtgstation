{
  "parser"  : "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "extends" : [
    "standard",
    "standard-react"
  ],
  "env"     : {
    "browser" : true,
    "node" : true,
    "jest" : true,
    "es6" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "space-before-function-paren": 0,
    "semi" : [2, "always"],
    "valid-jsdoc": 1,
    "max-len": [2, 120, 2],
    "comma-dangle": 2,
    "no-unreachable": 2,
    "eqeqeq": 2,
    "no-var" : 1,
    "prefer-const" : 1,
    "sort-vars": 2,
    "camelcase" : 1,
    "no-unused-vars" : 1,
    "no-unused-expressions" : 2
  }
}